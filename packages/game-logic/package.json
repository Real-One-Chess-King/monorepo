{
  "name": "@real_one_chess_king/game-logic",
  "version": "0.2.2",
  "description": "R.O.C.K. chess game logic",
  "keywords": [
    "chess",
    "game",
    "websockets"
  ],
  "main": "dist/cjs/index.cjs",
  "module": "dist/esm/index.mjs",
  "types": "dist/esm/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.cjs",
      "import": "./dist/esm/index.mjs",
      "types": "./dist/esm/index.d.ts"
    }
  },
  "files": [
    "dist/**/*"
  ],
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist/",
    "prebuild": "npm run clean",
    "build:cjs": "tsc -p tsconfig.cjs.json && mv dist/cjs/index.js dist/cjs/index.cjs",
    "build:esm": "tsc -p tsconfig.esm.json && mv dist/esm/index.js dist/esm/index.mjs",
    "build": "npm run build:cjs && npm run build:esm",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "eslint": "npx eslint 'src/**/*.ts'"
  },
  "author": "Eugene Perminov",
  "repository": {
    "type": "git",
    "url": "https://github.com/PerminovEugene/real_one_chess_king"
  },
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.7.0",
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.19.0",
    "eslint": "^8.57.1",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.6.0",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.19.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
